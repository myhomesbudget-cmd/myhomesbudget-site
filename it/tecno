      font-size: 1.25rem;
      color: rgba(0, 0, 0, 0.5);
    }

    .accordion.active .accordion-icon {
      transform: rotate(180deg);
    }

    .accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .accordion.active .accordion-content {
      max-height: 2000px;
